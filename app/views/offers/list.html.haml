%h2 Fresh offers
= "Verification result: #{@verified}, "
= link_to "get even fresher offers", :controller => "offers", :action => "get"
%br
%br

- if @offers.empty?
  .no_offers
    No offers

- if !@offers.empty?
  - @offers.each do |offer|
    .offer
      .title
        = "Offer: #{offer.title}"
      .payout
        = "Payout: #{offer.payout}"
      .thumbnail
        = image_tag offer.thumbnail["lowres"]
    %br
